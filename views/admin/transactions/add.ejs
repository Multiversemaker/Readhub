<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tambah Peminjaman</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <%- include('../components/navigational/sidebar') %>

    <div class="main-content">
        <%- include('../components/navigational/navbar', { title: 'Tambah Peminjaman Baru' }) %>

        <main class="content-body container-fluid mt-4">
            
            <div class="card shadow-sm col-md-8 mx-auto">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Formulir Peminjaman</h5>
                </div>
                <div class="card-body">
                    <form action="/admin/transactions/store" method="POST">
                        
                        <div class="mb-3">
                            <label class="form-label">Nama Peminjam</label>
                            <select name="id_pengguna" class="form-select" required>
                                <option value="">-- Pilih Anggota --</option>
                                <% users.forEach(user => { %>
                                    <option value="<%= user.id_user %>">
                                        <%= user.nama %> 
                                    </option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Judul Buku</label>
                            <select name="id_buku" class="form-select" required>
                                <option value="">-- Pilih Buku --</option>
                                <% books.forEach(book => { %>
                                    <% if(book.stok_tersedia > 0) { %>
                                        <option value="<%= book.id_buku %>">
                                            <%= book.judul %> (Stok: <%= book.stok_tersedia %>)
                                        </option>
                                    <% } %>
                                <% }) %>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="/admin/transactions" class="btn btn-secondary">Batal</a>
                            <button type="submit" class="btn btn-success">Simpan Transaksi</button>
                        </div>

                    </form>
                </div>
            </div>

        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>