<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laporan Perpustakaan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <%- include('../components/navigational/sidebar') %>

    <div class="main-content">
        <%- include('../components/navigational/navbar', { title: 'Laporan & Statistik' }) %>

        <main class="content-body container-fluid mt-4">

            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-light">
                    <strong>Filter Laporan</strong>
                </div>
                <div class="card-body">
                    <form action="/admin/reports/filter" method="POST" class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label">Dari Tanggal</label>
                            <input type="date" name="start_date" value="<%= startDate %>" class="form-control" required>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Sampai Tanggal</label>
                            <input type="date" name="end_date" value="<%= endDate %>" class="form-control" required>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-filter"></i> Terapkan Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card text-white bg-primary mb-3 shadow-sm" style="height: 100%;">
                        <div class="card-body text-center">
                            <h5 class="card-title">Total Peminjaman</h5>
                            <h1 class="display-4 fw-bold"><%= summary.total_transaksi %></h1>
                            <p class="card-text">Kali Transaksi</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card text-white bg-danger mb-3 shadow-sm" style="height: 100%;">
                        <div class="card-body text-center">
                            <h5 class="card-title">Total Denda Masuk</h5>
                            <h1 class="display-4 fw-bold">Rp <%= summary.total_denda ? Number(summary.total_denda).toLocaleString('id-ID') : 0 %></h1>
                            <p class="card-text">Pendapatan Denda</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">ðŸ“š Top 5 Buku Terpopuler</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th width="50">No</th>
                                <th>Judul Buku</th>
                                <th>Tipe</th>
                                <th>Frekuensi Pinjam</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(topBooks.length > 0) { %>
                                <% topBooks.forEach((buku, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td class="fw-bold"><%= buku.judul %></td>
                                    <td>
                                        <span class="badge bg-info text-dark text-uppercase"><%= buku.tipe_buku %></span>
                                    </td>
                                    <td><strong><%= buku.jumlah_pinjam %> kali</strong></td>
                                </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">Belum ada data peminjaman di periode ini.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>