<main id="mainContent" class="content shifted-collapsed p-4">

  <!-- HEADER -->
  <div class="header-section mb-4">
    <div class="header-overlay d-flex justify-content-between align-items-center">
      <div>
        <h1 class="heading">Manajemen User</h1>
        <p class="subheading">Kelola data pengguna sistem</p>
      </div>

      <a href="/admin/user-managements/add" class="btn btn-danger">
        + Tambah User Baru
      </a>
    </div>
  </div>

  <!-- TABLE CARD -->
  <div class="card p-4 shadow-sm">

    <!-- SEARCH (optional, tapi sesuai screenshot) -->
    <div class="mb-3 col-md-4">
      <input
        type="text"
        class="form-control"
        placeholder="Cari user berdasarkan nama..."
      >
    </div>

    <div class="table-responsive">
      <table class="table table-hover align-middle user-table">
        <thead>
          <tr>
            <th>Nama Lengkap</th>
            <th>Email</th>
            <th>Role</th>
            <th class="text-center">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(u => { %>
          <tr>
            <td><%= u.nama %></td>
            <td><%= u.email %></td>
            <td>
              <% if(u.role && u.role.role === 'admin') { %>
                <span class="badge bg-primary">Admin</span>
              <% } else { %>
                <span class="badge bg-secondary">Anggota</span>
              <% } %>
            </td>
            <td class="text-center">
              <a
                href="/admin/user-managements/edit/<%= u.id_user %>"
                class="btn btn-sm btn-outline-primary"
              >
                Edit
              </a>
              <a
                href="/admin/user-managements/delete/<%= u.id_user %>"
                onclick="return confirm('Yakin hapus user ini?')"
                class="btn btn-sm btn-outline-danger ms-1"
              >
                Hapus
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

  </div>

</main>