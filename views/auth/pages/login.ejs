<div class="container-fluid login-page">
  <div class="row g-0">
    
    <!-- LEFT SECTION (Background + Welcome Text) -->
    <div class="col-md-6 left-section d-flex align-items-center">
      <div class="welcome-text">
        <h1>Selamat Datang Di<br />Readhub</h1>
      </div>
    </div>

    <!-- RIGHT SECTION (Form) -->
    <div class="col-md-6 form-section d-flex justify-content-center align-items-center">
      <div class="form-container">

        <h2 class="heading">Login</h2>
        <p class="text">Silahkan Untuk Login</p>

        <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
          <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <form method="POST" action="/login">
          <div class="input-group mb-3">
            <input type="email" class="form-control shadow-sm" name="email" placeholder="Email" required />
          </div>

          <div class="input-group mb-3">
            <input type="password" class="form-control shadow-sm" id="password" name="password" placeholder="Password" required />
            <span class="input-group-text toggle-password" id="togglePassword">
              <i class="bi bi-eye"></i>
            </span>
          </div>

          <button type="submit" class="btn login-btn w-100 shadow-sm">Login</button>
        </form>

        <p class="info mt-3 text-center">
          Jika Belum Terdaftar, <a href="/register">Daftar Disini</a>
        </p>

      </div>
    </div>

  </div>
</div>
